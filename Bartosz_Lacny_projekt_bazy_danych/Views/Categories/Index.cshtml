@model IEnumerable<Bartosz_Lacny_projekt_bazy_danych.Models.Category>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista gatunków</h1>

<p>
    <a asp-action="Create" class="btn btn-success mt-3">Dodaj nowy gatunek</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Name)
            </td>

            <td class="text-end">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1">Edytuj</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary text-white me-1">Szczegóły</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>

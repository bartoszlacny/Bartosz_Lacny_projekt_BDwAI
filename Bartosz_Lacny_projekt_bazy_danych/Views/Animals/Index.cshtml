@model IEnumerable<Bartosz_Lacny_projekt_bazy_danych.Models.Animal>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista zwierząt w schronisku</h1>

<p>
    <a asp-action="Create" class="btn btn-success mt-3">Dodaj nowego zwierzaka</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category!.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cage!.CageNumber)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cage.CageNumber)
            </td>
            <td class="text-end">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1">Edytuj</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary text-white me-1">Szczegóły</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-secondary">Usuń</a>
            </td>
        </tr>
}
    </tbody>
</table>

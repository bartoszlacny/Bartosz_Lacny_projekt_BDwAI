@model Bartosz_Lacny_projekt_bazy_danych.Models.Cage

@{
    ViewData["Title"] = "Create";
}

<h1>Dodaj klatkę</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CageNumber" class="control-label"></label>
                <input asp-for="CageNumber" class="form-control" />
                <span asp-validation-for="CageNumber" class="text-danger"></span>
            </div>
            <div class="form-group form-check mt-2">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsClean" /> @Html.DisplayNameFor(model => model.IsClean)
                </label>
            </div>
            <div class="d-flex gap-2 mt-3">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Wróć do listy klatek</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
